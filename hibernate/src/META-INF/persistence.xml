<?xml version="1.0" encoding="UTF-8"?>
<persistence xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd" version="2.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/persistence">

<!-- Define persistence unit -->



<persistence-unit name="kursverwaltung.jpa">

<description>Test </description>


<properties>

<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/kursverwaltung?serverTimezone=GMT"/>

<property name="javax.persistence.jdbc.user" value="root"/>

<property name="javax.persistence.jdbc.password" value="1234"/>

<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>

<property name="hibernate.hbm2ddl.auto" value="update"/>

<property name="hibernate.show_sql" value="true"/>

</properties>

</persistence-unit>

</persistence>